<% content_for(:title, "Users - Admin - MagenticBazaar") %>

<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Users</h1>
  <p class="mt-1 text-sm text-gray-500">Manage user accounts and admin roles</p>
</div>

<div class="bg-white shadow rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Admin</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @users.each do |user| %>
        <tr>
          <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= user.name || "---" %></td>
          <td class="px-6 py-4 text-sm text-gray-500"><%= user.email_address %></td>
          <td class="px-6 py-4">
            <% if user.admin? %>
              <span class="inline-flex items-center rounded-full bg-indigo-100 text-indigo-800 px-2.5 py-0.5 text-xs font-medium">Admin</span>
            <% else %>
              <span class="inline-flex items-center rounded-full bg-gray-100 text-gray-600 px-2.5 py-0.5 text-xs font-medium">User</span>
            <% end %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500"><%= user.created_at.strftime("%b %d, %Y") %></td>
          <td class="px-6 py-4">
            <% unless user == current_user %>
              <%= form_with(url: admin_user_path(user), method: :patch, class: "inline") do |f| %>
                <%= f.hidden_field :admin, value: !user.admin? %>
                <%= f.submit(user.admin? ? "Revoke" : "Grant", class: "text-sm #{user.admin? ? 'text-red-600 hover:text-red-900' : 'text-indigo-600 hover:text-indigo-900'} cursor-pointer bg-transparent border-0") %>
              <% end %>
            <% else %>
              <span class="text-xs text-gray-400">Current user</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
