<% content_for(:title, "Edit Configuration - Admin") %>

<div class="mb-6">
  <%= link_to "&larr; Back to #{@provider.name}".html_safe, admin_llm_provider_path(@provider), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
</div>

<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Edit Model Configuration</h1>
  <p class="mt-1 text-sm text-gray-500">
    <strong><%= @configuration.llm_model.display_name %></strong> on <strong><%= @provider.name %></strong>
  </p>
</div>

<div class="max-w-2xl">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Configuration</h2>
    </div>

    <%= form_with(model: @configuration, url: admin_llm_model_configuration_path(@configuration), class: "p-6 space-y-6") do |f| %>
      <% if @configuration.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <ul class="list-disc list-inside text-sm text-red-800">
            <% @configuration.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <label class="block text-sm font-medium text-gray-700">Model</label>
        <p class="mt-1 text-sm text-gray-900"><%= @configuration.llm_model.llm_vendor.name %> — <%= @configuration.llm_model.display_name %></p>
        <p class="text-xs font-mono text-gray-500"><%= @configuration.llm_model.api_name %></p>
      </div>

      <div>
        <%= f.label :api_key, "API Key", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :api_key, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm font-mono", placeholder: @configuration.api_key.present? ? "••••••••••••••••" : "sk-..." %>
        <p class="mt-1 text-xs text-gray-500">
          <% if @configuration.api_key.present? %>
            A key is currently set. Enter a new value to replace it, or leave blank to keep the existing key.
          <% else %>
            Stored encrypted. Leave blank if not required.
          <% end %>
        </p>
      </div>

      <div>
        <%= f.label :base_url, "Base URL (optional)", class: "block text-sm font-medium text-gray-700" %>
        <% base_url_val = @configuration.credentials&.dig(:base_url) %>
        <%= f.text_field :base_url, value: base_url_val, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm", placeholder: "e.g. http://localhost:11434" %>
      </div>

      <div class="flex items-center gap-2">
        <%= f.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
        <%= f.label :active, "Active", class: "text-sm font-medium text-gray-700" %>
      </div>

      <div class="flex items-center gap-3 pt-4 border-t border-gray-200">
        <%= f.submit "Update Configuration", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
        <%= link_to "Cancel", admin_llm_provider_path(@provider), class: "text-sm text-gray-500 hover:text-gray-700" %>
      </div>
    <% end %>
  </div>
</div>
