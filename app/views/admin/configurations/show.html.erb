<% content_for(:title, "Configuration - Admin - MagenticBazaar") %>

<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Configuration</h1>
  <p class="mt-1 text-sm text-gray-500">MagenticBazaar engine settings (in-memory only, changes reset on restart)</p>
</div>

<div class="bg-white shadow rounded-lg">
  <%= form_with(url: admin_configuration_path, method: :patch, scope: :configuration, class: "divide-y divide-gray-200") do |f| %>
    <div class="p-6 space-y-6">
      <h2 class="text-lg font-medium text-gray-900">Directory Paths</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= f.label :ingest_dir, "Ingest Directory", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :ingest_dir, value: @config.ingest_dir, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm font-mono" %>
        </div>
        <div>
          <%= f.label :ingested_dir, "Ingested Directory", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :ingested_dir, value: @config.ingested_dir, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm font-mono" %>
        </div>
        <div>
          <%= f.label :uml_dir, "UML Directory", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :uml_dir, value: @config.uml_dir, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm font-mono" %>
        </div>
        <div>
          <%= f.label :skills_dir, "Skills Directory", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :skills_dir, value: @config.skills_dir, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm font-mono" %>
        </div>
        <div>
          <%= f.label :human_dir, "Human Docs Directory", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :human_dir, value: @config.human_dir, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm font-mono" %>
        </div>
        <div>
          <%= f.label :tesseract_path, "Tesseract Path", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :tesseract_path, value: @config.tesseract_path, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm font-mono" %>
        </div>
      </div>
    </div>

    <div class="p-6 space-y-6">
      <h2 class="text-lg font-medium text-gray-900">Processing</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= f.label :queue_name, "Queue Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :queue_name, value: @config.queue_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
        </div>
        <div class="flex items-center gap-3 pt-6">
          <%= f.check_box :async, checked: @config.async, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
          <%= f.label :async, "Async Processing", class: "text-sm font-medium text-gray-700" %>
        </div>
      </div>
    </div>

    <div class="px-6 py-4 flex justify-end bg-gray-50">
      <%= f.submit "Save Configuration", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
