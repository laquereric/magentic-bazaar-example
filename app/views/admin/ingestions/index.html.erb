<% content_for(:title, "Ingestions - Admin - MagenticBazaar") %>

<div class="mb-6 flex items-center justify-between">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Ingestions</h1>
    <p class="mt-1 text-sm text-gray-500">Manage document ingestion pipeline</p>
  </div>
  <%= button_to "Run New Ingestion", admin_ingestions_path, method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
</div>

<div class="bg-white shadow rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Direction</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Progress</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Git SHA</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
        <th class="px-6 py-3"></th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @ingestions.each do |ingestion| %>
        <tr>
          <td class="px-6 py-4 text-sm font-medium text-gray-900">#<%= ingestion.id %></td>
          <td class="px-6 py-4 text-sm"><%= ingestion.direction.capitalize %></td>
          <td class="px-6 py-4"><%= status_badge(ingestion.status) %></td>
          <td class="px-6 py-4">
            <div class="flex items-center gap-2">
              <div class="w-24 bg-gray-200 rounded-full h-2">
                <% progress = ingestion.documents_count > 0 ? (ingestion.documents_processed.to_f / ingestion.documents_count * 100).round : 0 %>
                <div class="bg-indigo-600 h-2 rounded-full" style="width: <%= progress %>%"></div>
              </div>
              <span class="text-xs text-gray-500"><%= ingestion.documents_processed %>/<%= ingestion.documents_count %></span>
            </div>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500 font-mono"><%= truncate(ingestion.git_sha.to_s, length: 8) %></td>
          <td class="px-6 py-4 text-sm text-gray-500"><%= ingestion.created_at.strftime("%b %d, %Y %H:%M") %></td>
          <td class="px-6 py-4 text-right space-x-2">
            <%= link_to "View", admin_ingestion_path(ingestion), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
            <% if ingestion.status == "completed" && ingestion.direction == "forward" %>
              <%= button_to "Undo", undo_admin_ingestion_path(ingestion), method: :post, class: "text-sm text-red-600 hover:text-red-900", data: { turbo_confirm: "Are you sure you want to undo this ingestion?" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
      <% if @ingestions.empty? %>
        <tr><td colspan="7" class="px-6 py-8 text-center text-sm text-gray-500">No ingestions yet. Click "Run New Ingestion" to start.</td></tr>
      <% end %>
    </tbody>
  </table>
</div>
