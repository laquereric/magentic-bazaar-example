<% content_for(:title, "#{@provider.name} - Admin") %>

<div class="mb-6">
  <%= link_to "&larr; Back to Providers".html_safe, admin_llm_providers_path, class: "text-sm text-indigo-600 hover:text-indigo-900" %>
</div>

<div class="mb-6 flex items-center justify-between">
  <div>
    <h1 class="text-2xl font-bold text-gray-900"><%= @provider.name %></h1>
    <div class="mt-2 flex items-center gap-3">
      <span class="text-sm font-mono text-gray-500"><%= @provider.llm_provider_gem.gem_name %></span>
      <% if @provider.active? %>
        <span class="inline-flex items-center rounded-full bg-green-100 text-green-800 px-2.5 py-0.5 text-xs font-medium">Active</span>
      <% else %>
        <span class="inline-flex items-center rounded-full bg-gray-100 text-gray-600 px-2.5 py-0.5 text-xs font-medium">Inactive</span>
      <% end %>
      <% if @provider.llm_provider_gem.installed? %>
        <span class="inline-flex items-center rounded-full bg-green-100 text-green-800 px-2.5 py-0.5 text-xs font-medium">Gem installed</span>
      <% else %>
        <span class="inline-flex items-center rounded-full bg-yellow-100 text-yellow-800 px-2.5 py-0.5 text-xs font-medium">Gem not installed</span>
      <% end %>
    </div>
  </div>
  <div class="flex items-center gap-2">
    <%= button_to "Test Connection", test_admin_llm_provider_path(@provider), method: :post, class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    <%= link_to "Edit", edit_admin_llm_provider_path(@provider), class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    <%= button_to "Delete", admin_llm_provider_path(@provider), method: :delete, data: { turbo_confirm: "Delete this provider and all its configurations?" }, class: "inline-flex items-center px-3 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50" %>
  </div>
</div>

<!-- Model Configurations -->
<div class="bg-white shadow rounded-lg overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
    <h2 class="text-lg font-medium text-gray-900">Model Configurations</h2>
    <% if @available_models.any? %>
      <%= link_to "Add Model", new_admin_llm_provider_llm_model_configuration_path(@provider), class: "inline-flex items-center px-3 py-1.5 border border-transparent rounded-md text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
    <% end %>
  </div>
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Model</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Vendor</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Context</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Capabilities</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Credentials</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
        <th class="px-6 py-3"></th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @configurations.each do |config| %>
        <tr>
          <td class="px-6 py-4">
            <div class="text-sm font-medium text-gray-900"><%= config.llm_model.display_name %></div>
            <div class="text-xs font-mono text-gray-500"><%= config.llm_model.api_name %></div>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500"><%= config.llm_model.llm_vendor.name %></td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium <%= config.llm_model.model_type == 'chat' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800' %>">
              <%= config.llm_model.model_type %>
            </span>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500"><%= number_with_delimiter(config.llm_model.context_window) %></td>
          <td class="px-6 py-4">
            <div class="flex gap-1">
              <% if config.llm_model.supports_streaming? %>
                <span class="inline-flex items-center rounded bg-gray-100 px-1.5 py-0.5 text-xs text-gray-600" title="Streaming">S</span>
              <% end %>
              <% if config.llm_model.supports_vision? %>
                <span class="inline-flex items-center rounded bg-gray-100 px-1.5 py-0.5 text-xs text-gray-600" title="Vision">V</span>
              <% end %>
              <% if config.llm_model.supports_tools? %>
                <span class="inline-flex items-center rounded bg-gray-100 px-1.5 py-0.5 text-xs text-gray-600" title="Tools">T</span>
              <% end %>
            </div>
          </td>
          <td class="px-6 py-4">
            <% if config.api_key.present? %>
              <span class="inline-flex items-center rounded-full bg-green-100 text-green-800 px-2 py-0.5 text-xs font-medium">Set</span>
            <% else %>
              <span class="inline-flex items-center rounded-full bg-yellow-100 text-yellow-800 px-2 py-0.5 text-xs font-medium">Missing</span>
            <% end %>
          </td>
          <td class="px-6 py-4">
            <% if config.active? %>
              <span class="inline-flex items-center rounded-full bg-green-100 text-green-800 px-2 py-0.5 text-xs font-medium">Active</span>
            <% else %>
              <span class="inline-flex items-center rounded-full bg-gray-100 text-gray-600 px-2 py-0.5 text-xs font-medium">Inactive</span>
            <% end %>
          </td>
          <td class="px-6 py-4 text-right text-sm space-x-2">
            <%= link_to "Edit", edit_admin_llm_model_configuration_path(config), class: "text-indigo-600 hover:text-indigo-900" %>
            <%= button_to "Remove", admin_llm_model_configuration_path(config), method: :delete, data: { turbo_confirm: "Remove this model configuration?" }, class: "text-red-600 hover:text-red-900" %>
          </td>
        </tr>
      <% end %>
      <% if @configurations.empty? %>
        <tr>
          <td colspan="8" class="px-6 py-8 text-center text-sm text-gray-500">
            No model configurations yet.
            <% if @available_models.any? %>
              <%= link_to "Add one", new_admin_llm_provider_llm_model_configuration_path(@provider), class: "text-indigo-600 hover:text-indigo-900" %>.
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
