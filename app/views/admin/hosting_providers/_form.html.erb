<div class="max-w-2xl">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Provider Details</h2>
    </div>

    <%= form_with(model: [:admin, hosting_provider], class: "p-6 space-y-6") do |f| %>
      <% if hosting_provider.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <ul class="list-disc list-inside text-sm text-red-800">
            <% hosting_provider.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm", placeholder: "e.g. My Hostinger Account" %>
      </div>

      <div>
        <%= f.label :provider_type, class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :provider_type, [["Hostinger", "hostinger"]], { prompt: "Select a provider type..." }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
        <p class="mt-1 text-xs text-gray-500">The hosting provider implementation to use.</p>
      </div>

      <div>
        <%= f.label :api_token, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :api_token, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm", placeholder: "Bearer token for the hosting API" %>
        <% if hosting_provider.persisted? && hosting_provider.api_token.present? %>
          <p class="mt-1 text-xs text-gray-500">Leave blank to keep the current token.</p>
        <% end %>
      </div>

      <div>
        <%= f.label :base_url, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :base_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm", placeholder: "Leave blank for provider default" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :timeout, class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :timeout, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Request timeout in seconds</p>
        </div>
        <div>
          <%= f.label :per_page, class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :per_page, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Items per page for pagination</p>
        </div>
      </div>

      <div class="flex items-center gap-2">
        <%= f.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
        <%= f.label :active, "Active", class: "text-sm font-medium text-gray-700" %>
      </div>

      <div class="flex items-center gap-3 pt-4 border-t border-gray-200">
        <%= f.submit hosting_provider.persisted? ? "Update Hosting Provider" : "Create Hosting Provider", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
        <% if hosting_provider.persisted? %>
          <%= link_to "Cancel", admin_hosting_provider_path(hosting_provider), class: "text-sm text-gray-500 hover:text-gray-700" %>
        <% else %>
          <%= link_to "Cancel", admin_hosting_providers_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
