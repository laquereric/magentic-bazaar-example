<% content_for(:title, "#{@container_runtime.name} - Admin") %>

<div class="mb-6">
  <%= link_to "&larr; Back to Container Runtimes".html_safe, admin_container_runtimes_path, class: "text-sm text-indigo-600 hover:text-indigo-900" %>
</div>

<div class="mb-6 flex items-center justify-between">
  <div>
    <h1 class="text-2xl font-bold text-gray-900"><%= @container_runtime.name %></h1>
    <div class="mt-2 flex items-center gap-3">
      <span class="text-sm font-mono text-gray-500"><%= @container_runtime.driver %></span>
      <% if @container_runtime.active? %>
        <span class="inline-flex items-center rounded-full bg-green-100 text-green-800 px-2.5 py-0.5 text-xs font-medium">Active</span>
      <% else %>
        <span class="inline-flex items-center rounded-full bg-gray-100 text-gray-600 px-2.5 py-0.5 text-xs font-medium">Inactive</span>
      <% end %>
      <% case @container_runtime.status %>
      <% when "active" %>
        <span class="inline-flex items-center rounded-full bg-green-100 text-green-800 px-2.5 py-0.5 text-xs font-medium">Connected</span>
      <% when "error" %>
        <span class="inline-flex items-center rounded-full bg-red-100 text-red-800 px-2.5 py-0.5 text-xs font-medium">Error</span>
      <% else %>
        <span class="inline-flex items-center rounded-full bg-gray-100 text-gray-600 px-2.5 py-0.5 text-xs font-medium">Not tested</span>
      <% end %>
      <% if @container_runtime.last_tested_at.present? %>
        <span class="inline-flex items-center rounded-full bg-blue-100 text-blue-800 px-2.5 py-0.5 text-xs font-medium" title="<%= @container_runtime.last_tested_at.strftime('%B %d, %Y at %l:%M %p %Z') %>">Tested <%= time_ago_in_words(@container_runtime.last_tested_at) %> ago</span>
      <% end %>
    </div>
  </div>
  <div class="flex items-center gap-2">
    <%= button_to "Test Connection", test_admin_container_runtime_path(@container_runtime), method: :post, class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    <%= link_to "Edit", edit_admin_container_runtime_path(@container_runtime), class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    <%= button_to "Delete", admin_container_runtime_path(@container_runtime), method: :delete, data: { turbo_confirm: "Delete this container runtime?" }, class: "inline-flex items-center px-3 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50" %>
  </div>
</div>

<div class="bg-white shadow rounded-lg overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-medium text-gray-900">Configuration</h2>
  </div>
  <dl class="divide-y divide-gray-200">
    <div class="px-6 py-4 flex">
      <dt class="w-48 text-sm font-medium text-gray-500">Driver</dt>
      <dd class="text-sm text-gray-900 font-mono"><%= @container_runtime.driver || "â€”" %></dd>
    </div>
    <div class="px-6 py-4 flex">
      <dt class="w-48 text-sm font-medium text-gray-500">Socket Path</dt>
      <dd class="text-sm text-gray-900 font-mono"><%= @container_runtime.socket_path || "Default" %></dd>
    </div>
    <div class="px-6 py-4 flex">
      <dt class="w-48 text-sm font-medium text-gray-500">Connection Options</dt>
      <dd class="text-sm text-gray-900 font-mono"><%= @container_runtime.connection_options.present? ? @container_runtime.connection_options.to_json : "None" %></dd>
    </div>
  </dl>
</div>

<% if @container_runtime.error_log.present? %>
  <div class="mt-6 bg-red-50 border border-red-200 rounded-lg p-4">
    <h3 class="text-sm font-medium text-red-800 mb-1">Last Error</h3>
    <pre class="text-sm text-red-700 whitespace-pre-wrap"><%= @container_runtime.error_log %></pre>
  </div>
<% end %>
