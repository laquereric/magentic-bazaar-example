<% content_for(:title, "Documents - MagenticBazaar") %>

<div class="mb-6 flex items-center justify-between">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Documents</h1>
    <p class="mt-1 text-sm text-gray-500">Browse ingested documents</p>
  </div>
</div>

<!-- Search & Filters -->
<%= form_tag documents_path, method: :get, class: "mb-6 bg-white shadow rounded-lg p-4", data: { controller: "search", turbo_frame: "documents" } do %>
  <div class="flex flex-wrap gap-4">
    <div class="flex-1 min-w-[200px]">
      <%= text_field_tag :q, params[:q], placeholder: "Search documents...", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm", data: { search_target: "input", action: "input->search#search" } %>
    </div>
    <div>
      <%= select_tag :file_type, options_for_select([["All Types", ""], "Markdown", "PDF", "Image (OCR)"], params[:file_type]), class: "rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm", data: { controller: "filter", action: "change->filter#submit" } %>
    </div>
    <div>
      <%= select_tag :status, options_for_select([["All Statuses", ""], "pending", "ingested", "undone"], params[:status]), class: "rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm", data: { controller: "filter", action: "change->filter#submit" } %>
    </div>
  </div>
<% end %>

<%= turbo_frame_tag "documents" do %>
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Words</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @documents.each do |doc| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <%= link_to doc.title, document_path(doc), class: "text-sm font-medium text-indigo-600 hover:text-indigo-900" %>
              <div class="text-xs text-gray-400"><%= doc.original_filename %></div>
            </td>
            <td class="px-6 py-4"><%= file_type_badge(doc.file_type) %></td>
            <td class="px-6 py-4"><%= status_badge(doc.status) %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= number_with_delimiter(doc.word_count) %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= doc.created_at.strftime("%b %d, %Y") %></td>
          </tr>
        <% end %>
        <% if @documents.empty? %>
          <tr>
            <td colspan="5" class="px-6 py-8 text-center text-sm text-gray-500">No documents found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render "shared/pagination", pagy: @pagy %>
<% end %>
