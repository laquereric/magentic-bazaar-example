<nav class="bg-indigo-700">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center gap-x-8">
        <%= link_to "MagenticBazaar", root_path, class: "text-white text-lg font-bold" %>
        <div class="hidden md:flex items-center gap-x-4">
          <%= link_to "Documents", documents_path, class: "text-indigo-100 hover:text-white text-sm font-medium" %>
          <%= link_to "UML Diagrams", uml_diagrams_path, class: "text-indigo-100 hover:text-white text-sm font-medium" %>
          <%= link_to "Skills", skills_path, class: "text-indigo-100 hover:text-white text-sm font-medium" %>
          <%= link_to "Upload", new_upload_path, class: "text-indigo-100 hover:text-white text-sm font-medium" %>
        </div>
      </div>
      <div class="flex items-center gap-x-4">
        <% if current_user %>
          <% if current_user.admin? %>
            <%= link_to "Admin", admin_root_path, class: "text-indigo-100 hover:text-white text-sm font-medium" %>
          <% end %>
          <span class="text-indigo-200 text-sm"><%= current_user.name || current_user.email_address %></span>
          <%= button_to "Sign out", session_path, method: :delete, class: "text-indigo-200 hover:text-white text-sm" %>
        <% else %>
          <%= link_to "Sign in", new_session_path, class: "text-indigo-100 hover:text-white text-sm font-medium" %>
          <%= link_to "Sign up", new_registration_path, class: "bg-indigo-500 hover:bg-indigo-400 text-white px-3 py-1.5 rounded-md text-sm font-medium" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
